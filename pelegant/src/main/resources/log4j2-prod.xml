<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="WARN">  <!-- 减少Logback自身的DEBUG输出 -->
    <!-- 属性配置 -->
    <Properties>
        <!-- 日志目录：使用环境变量或默认路径 -->
        <Property name="log_dz">${sys:LOG_PATH:-/var/pelegant/logs/back}</Property>
        <Property name="log_name">application</Property>
        <Property name="Interval">60</Property>  <!-- 建议改为1小时滚动一次 -->
        <Property name="split_size">1MB</Property>
        <Property name="log_pattern">%d{yyyy-MM-dd HH:mm:ss}(pelegant)[%thread](cyl)%-5level %logger{50} - %msg%n</Property>
    </Properties>

    <!-- 定义附加器 -->
    <Appenders>
        <!-- 控制台输出 -->
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${log_pattern}"/>
        </Console>

        <!-- 普通日志文件 -->
        <RollingFile name="RollingFile" fileName="${log_dz}/${log_name}.log"
                     filePattern="${log_dz}/${log_name}-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log_pattern}"/>
            <policies>
                <TimeBasedTriggeringPolicy interval="${Interval}" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${split_size}"/>
            </policies>
            <DefaultRolloverStrategy maxHistory="30" totalSizeCap="1GB"/>
        </RollingFile>

        <!-- 错误日志文件 -->
        <RollingFile name="ErrorFile" fileName="${log_dz}/${log_name}-ERROR.log"
                     filePattern="${log_dz}/${log_name}-ERROR-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="${log_pattern}"/>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <policies>
                <TimeBasedTriggeringPolicy interval="${Interval}" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${split_size}"/>
            </policies>
            <DefaultRolloverStrategy maxHistory="30" totalSizeCap="500MB"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 减少Spring框架的DEBUG日志 -->
        <Logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>

        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
    </Loggers>
</Configuration>